rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS (Reading from Auth Token) ---
    function isUserRole(role) {
      return request.auth.token.role == role;
    }
    function isUserMasterAdmin() {
      return isUserRole('master-admin');
    }
    function isUserAdmin() {
      return isUserRole('admin');
    }
    function isUserAdminOrHigher() {
      return isUserAdmin() || isUserMasterAdmin();
    }
    function isUserBookkeeper() {
       return isUserRole('bookkeeper');
    }
    function isUserViewer() {
      return isUserRole('viewer') || isUserAdminOrHigher();
    }
    
    // This helper function MUST read from the DB
    // We make it safer by using .get()
    function getUserContactId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('contactId', null);
    }
    // ----------------------------

    match /users/{userId} {
      allow list: if isUserAdminOrHigher() || request.auth != null;
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId || isUserAdminOrHigher();
      allow update, delete: if isUserMasterAdmin();

      match /chat/{chatId} {
          allow read, write: if request.auth.uid == userId;
      }
    }

    match /contacts/{contactId} {
      allow read: if isUserViewer();
      allow write: if isUserAdminOrHigher();
    }

    match /chatHistory/{chatId} {
      allow read, write: if request.auth != null;
    }

    // --- UPDATED EXPENSE REPORT RULES ---
    match /expenseReports/{reportId} {
      
      // Create: (Unchanged)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy; 

      // --- FIX: ADDED 'LIST' PERMISSION ---
      // This rule allows queries on the collection
      allow list: if 
        // Master Admins and Bookkeepers can query the whole collection
        isUserMasterAdmin() || isUserBookkeeper() ||
        // Other users can ONLY query if they are filtering by their own contactId
        (getUserContactId() != null && request.query.where.staffContactId == getUserContactId());

      // Read/Update/Delete: (For single documents)
      // This rule allows getting/editing a specific document
      allow read, update, delete: if 
        isUserMasterAdmin() || 
        isUserBookkeeper() ||
        // The staff member on the report can get/edit it
        (getUserContactId() != null && resource.data.staffContactId == getUserContactId());
    }
  }
}