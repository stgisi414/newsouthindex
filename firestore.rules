rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS (Reading from Auth Token ONLY) ---
    function isUserRole(role) {
      return request.auth.token.role == role;
    }
    function isUserMasterAdmin() {
      return isUserRole('master-admin');
    }
    function isUserAdmin() {
      return isUserRole('admin');
    }
    function isUserAdminOrHigher() {
      return isUserAdmin() || isUserMasterAdmin();
    }
    function isUserBookkeeper() {
       return isUserRole('bookkeeper');
    }
    function isUserViewer() {
      // A bookkeeper can see everything a viewer can
      return isUserRole('viewer') || isUserAdminOrHigher() || isUserBookkeeper();
    }
    // ----------------------------

    match /users/{userId} {
      // Admins, Master Admins, and Bookkeepers can list users
      allow list: if isUserAdminOrHigher() || isUserBookkeeper();
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId || isUserAdminOrHigher();
      allow update, delete: if isUserMasterAdmin(); 

      match /chat/{chatId} {
          allow read, write: if request.auth.uid == userId;
      }
    }

    match /contacts/{contactId} {
      allow list, read: if isUserViewer();
      allow write: if isUserAdminOrHigher();
    }

    match /chatHistory/{chatId} {
      allow read, write: if request.auth != null;
    }

    // --- UPDATED EXPENSE REPORT RULES ---
    match /expenseReports/{reportId} {
      
      // Create:
      allow create: if request.auth.uid == request.resource.data.createdBy;
      
      // List (Queries):
      // This rule reads from the auth token.
      allow list: if 
        // Master Admins and Bookkeepers can query the whole collection
        isUserMasterAdmin() ||
        isUserBookkeeper() ||
        // Other users can query if they are filtering by their own contactId
        (request.auth.token.contactId != null && request.query.where.staffContactId == request.auth.token.contactId) ||
        // ...OR if they are filtering by their own user ID
        (request.auth != null && request.query.where.createdBy == request.auth.uid);

    // Read/Update/Delete: (For single documents)
    // This rule also reads from the auth token.
    allow read, update, delete: if
        isUserMasterAdmin() ||
        isUserBookkeeper() ||
        // FIX: The staff member on the report can get/edit it
        (request.auth.token.contactId != null && resource.data.staffContactId == request.auth.token.contactId) ||
        // ...OR the user who created it can get/edit it
        (request.auth != null && resource.data.createdBy == request.auth.uid);
    }

    // --- Rule for the counter ---
    match /metadata/expenseReportCounter {
      // Only backend functions (like addExpenseReport) can read/write this
      allow read, write: if false; 
    }
  }
}