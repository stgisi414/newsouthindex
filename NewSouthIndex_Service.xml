<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.4" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <RegistrationInfo>
    <Date>2025-10-16T16:00:00</Date>
    <Author>stefd</Author>
    <Description>Runs the Firebase Emulators, Vite Dev Server, and Cloudflare Tunnel concurrently in the background for New South Index development.</Description>
  </RegistrationInfo>
  <Triggers>
    <LogonTrigger>
      <Enabled>true</Enabled>
      <!-- Delay slightly to let the system fully initialize -->
      <Delay>PT1M</Delay>
    </LogonTrigger>
  </Triggers>
  <Principals>
    <Principal id="Author">
      <LogonType>InteractiveToken</LogonType>
      <UserId>stefd</UserId>
    </Principal>
  </Principals>
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>false</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <Priority>7</Priority>
    <Hidden>true</Hidden>
  </Settings>
  <Actions Context="Author">
    <Exec>
      <!-- REVERTING TO DIRECT POWERSHELL CALL, but ensuring explicit ExecutionPolicy for robust run -->
      <Command>powershell.exe</Command>
      <!-- FIX: Explicitly call powershell with the file and Bypass policy -->
      <Arguments>-ExecutionPolicy Bypass -File "C:\code2\newsouthindex\start_dev.ps1"</Arguments>
      <WorkingDirectory>C:\code2\newsouthindex</WorkingDirectory>
    </Exec>
  </Actions>
</Task>
