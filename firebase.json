{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "auth": { "host": "0.0.0.0", "port": 9099 },
    "functions": { "host": "0.0.0.0", "port": 5003 },
    "firestore": { "host": "0.0.0.0", "port": 8081 },
    "hosting": { "host": "0.0.0.0", "port": 5000 },
    "ui": { "enabled": true, "port": 4000 }
  }
}